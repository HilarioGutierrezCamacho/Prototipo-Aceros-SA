@page "/index"

<style>
    .ant-carousel .slick-slide {
        text-align: center;
        height: 160px;
        line-height: 160px;
        background: #364d79;
        overflow: hidden;
    }

    .ant-carousel .slick-slide h3 {
        color: #fff;
        padding-bottom: 50px;
    }
</style>

<div style="background-color: #ececec; padding: 20px;">

    <Row Gutter="24">

        <Col Span="14">
            <Row>
                <Col Flex="3">
                    <Carousel Autoplay="TimeSpan.FromSeconds(5)">
                        <CarouselSlick>
                            <h3>Materia Prima</h3>
                        </CarouselSlick>
                        <CarouselSlick>
                            <h3>Refacciones</h3>
                        </CarouselSlick>
                        <CarouselSlick>
                            <h3>Productos Varios</h3>
                        </CarouselSlick>
                    </Carousel>
                </Col>
            </Row>
            <hr />
            <Row>
                <Card Bordered="false" Title=@("Articulos Recientes")>
                    <Body>
                        <Table DataSource="articulos" PageSize="5">
                            <AntDesign.Column @bind-Field="@context.Nombre" />
                            <AntDesign.Column @bind-Field="@context.Descripción" />
                            <AntDesign.Column @bind-Field="@context.Almacen" />
                            <AntDesign.Column @bind-Field="@context.Estatus" />
                            <AntDesign.Column @bind-Field="@context.FechaAdd" />
                        </Table>
                    </Body>
                </Card>
            </Row>
        </Col>

        <Col Span="10">
            <Row>
                <Col Flex="3">
                    <Card Bordered="false" Title=@("Consumo por valor")>
                        <Body>
                            <Pie Data="userStoriesByCriteria" Config="pieConfig" />
                        </Body>
                    </Card>
                </Col>
            </Row>
            <hr />
            <Row>
                <Col Flex="3">
                <Card Bordered="false" Title=@("Consumo por unidad")>
                    <Body>
                        <Pie Data="consumoUnidadData" Config="pieConfigConsumoUnidad" />
                    </Body>
                </Card>
                </Col>
            </Row>
        </Col>

    </Row>

</div>

